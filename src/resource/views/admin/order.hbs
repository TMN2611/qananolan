

{{>admin-header}}
<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="pills-Wait-tab" data-toggle="pill" href="#pills-Wait" role="tab" aria-controls="pills-Wait" aria-selected="true">Chờ xác nhận</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="pills-Confirmed-tab" data-toggle="pill" href="#pills-Confirmed" role="tab" aria-controls="pills-Confirmed" aria-selected="false">Đã xác nhận</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="pills-Cancel-tab" data-toggle="pill" href="#pills-Cancel" role="tab" aria-controls="pills-Cancel" aria-selected="false">Đã hủy</a>
  </li>
</ul>
<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-Wait" role="tabpanel" aria-labelledby="pills-Wait-tab">
     {{>orderListTable orderList=orderWait}}
  </div>
  
  <div class="tab-pane fade" id="pills-Confirmed" role="tabpanel" aria-labelledby="pills-Confirmed-tab">
     {{>orderListTable orderList=orderConfirm}}

  </div>

  <div class="tab-pane fade" id="pills-Cancel" role="tabpanel" aria-labelledby="pills-Cancel-tab">
     {{>orderListTable orderList=orderCancel}}

  </div>
</div>





<script>
  const adminToken = JSON.parse(sessionStorage.getItem("admin-token"));
  const orderLinkList = document.querySelectorAll(".order_detail-link");
  orderLinkList.forEach(function(orderLink) {

        orderLink.addEventListener('click', function(e){
          const orderId = e.currentTarget.dataset.id;

          window.location = `/admin/order-detail/${orderId}/${adminToken}` 
        })
  })
  
</script>

